<header>
	<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
		<div class="container-fluid">
			<a class="navbar-brand" href="{{ path('home') }}">My App Symfony</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarNavAltMarkup">
				<div class="navbar-nav">
					<a class="nav-link {{ currentPage is defined and currentPage == 'home' ? 'active' }}" aria-current="page" href="{{path('home')}}">Home</a>
				</div>
				<div class="navbar-nav">
					<a class="nav-link {{ currentPage is defined and currentPage == 'articles' ? 'active' }}" aria-current="page" href="{{path('app.article.index')}}">Article</a>
				</div>
			</div>
			{% if app.user %}
				{% if is_granted('ROLE_ADMIN') %}
					<div class="dropdown me-2">
						<button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
							<i class="bi bi-cloud-haze2-fill"></i>
							Admin
						</button>
						<ul class="dropdown-menu">
							<li>
								<a class="dropdown-item" href="{{ path('admin.user.index') }}">
									Gérer les utilisateurs
								</a>
							</li>
						</li>
						<li>
							<a class="dropdown-item" href="{{ path('admin') }}">
								Articles
							</a>
						</li>
						<li>
							<a class="dropdown-item" href="{{ path('app_categorie_index') }}">
								Catégories
							</a>
						</li>
					</ul>
				</div>
			{% endif %}
			<div class="navbar-btn">
				<a href="{{ path('logout') }}" class="btn btn-danger">
					<i class="bi bi-box-arrow-in-left"></i>
					Logout
				</a>
			</div>
		{% else %}
			<div class="navbar-btn me-2">
				<a href="{{ path('login') }}" class="btn btn-success">
					<i class="bi bi-box-arrow-in-right"></i>
					Login
				</a>
			</div>
			<div class="navbar-btn me-2">
				<a href="{{ path('register') }}" class="btn btn-success">
					<i class="bi bi-person-plus"></i>
					Sign up
				</a>
			</div>
		{% endif %}
	</div>
</nav></header>
