{% extends "layout.html.twig" %}

{% block title %}
	Edit
	{{ user.prenom }}
	{{ user.nom }}

	{{parent()}}
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('admin') }}
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	{{ encore_entry_script_tags('admin') }}
{% endblock %}

{% block body %}
	<div class="container-fluid mt-4 mb-4">
		<div class="shadow border border-0 card w-50 mx-auto p-3">
			<h1 class="text-center">
				Modification de
				{{ user.prenom }}
				{{ user.nom }}
			</h1>

			{% include "Backend/User/_form.html.twig" with { button_label: "Modifier" } %}
		</div>
	</div>
{% endblock %}
