{% extends "layout.html.twig" %}

{% block title %}
    Modification Article |
    {{parent()}}
{% endblock %}

{% block body %}
    <div class="container-fluid mt-4">
        <div class="card w-50 mx-auto p-3">
        <h1 class="text-center">MODIFICATION D'UN ARTICLE</h1>
            {{form_start(form)}}
            {{form_row(form.titre)}}
            {{form_row(form.content)}}
            <div class="text-center">
                <button type="submit" class="btn btn-dark btn-inline">MODIFIER</button>
            </div>
            {{form_end(form)}}
        </div>
    </div>
{% endblock %}