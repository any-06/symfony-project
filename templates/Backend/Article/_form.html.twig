{{form_start(form)}}

{{form_row(form.titre)}}

{{form_row(form.categories)}}

{{form_row(form.imageFile)}}

<div class="mb-3">
	<label for="article[content]">Contenu:</label>
	<div id="ckeditor" class="ckeditor-input">
		{{ form.content.vars.value|raw }}
	</div>

	{{form_row(form.content)}}
</div>


<div class="text-center">
	<button type="submit" class="btn btn-dark btn-inline">{{ button_label|default('Save') }}</button>
</div>

{{form_end(form)}}
