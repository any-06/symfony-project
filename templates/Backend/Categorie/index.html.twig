{% extends "layout.html.twig" %}

{% block title %}
	Admin catégories |
	{{ parent() }}
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('admin') }}
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	{{ encore_entry_script_tags('admin') }}
{% endblock %}

{% block body %}
	<section class="container mt-4">
		<h1 class="text-center">Admin des catégories</h1>

		<a href="{{ path('app_categorie_new') }}" class="shadow border border-0 btn btn-dark">Céer une catégorie</a>

		<div class="d-flex flex-wrap justify-content-between gap-2 mt-4">
			{% for categorie in categories %}
				<div class="shadow border border-0 blog-card mt-0">
					<div class="blog-card-content">
						<div class="row align-items-center">
							<h3 class="col-md-6">
								{{ categorie.titre }}
							</h3>
							<div class="col-md-6">
								<div class="form-check form-switch">
									<input class="form-check-input" type="checkbox" role="switch" value="{{ categorie.id }}" data-switchs-active-tag="" {{ categorie.enable ? 'checked' }}>
									<label class="form-check-label">Actif</label>
								</div>
							</div>
						</div>
						<div class="d-flex align-items-center mt-2">
							<div class="col md-6">
								<a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="btn btn-warning">Modifier</a>
							</div>
							<div class="col md-6">
								{% include 'Backend/Categorie/_delete_form.html.twig' %}
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</section>

{% endblock %}
